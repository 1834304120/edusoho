<div class="bottom cloud-search-section">
  <div class="form-inline row mbl">
    <div class="form-group col-sm-5">
      <label>关键字：</label>
      <select class="form-control form-control-input form-csearch-type js-search-type" name="searchType">{{ 'admin.cloud_file.keyword_type'|trans }} <span class="caret" ></span>
        <option value="">{{ 'admin.cloud_file.select_placeholeder'|trans }}</option>
        <option value="title"><a href="javascript:;" >{{ 'admin.cloud_file.keyword_type.title'|trans }}</a></option>
        <option value="course"><a href="javascript:;" >{{ 'admin.cloud_file.keyword_type.course'|trans }}</a></option>
        <option value="user"><a href="javascript:;" >{{ 'admin.cloud_file.keyword_type.user'|trans }}</a></option>
      </select>
      <input class="form-control form-control-input form-space" name="keywords" placeholder="{{ 'admin.cloud_file.keyword_placeholder'|trans }}">
    </div>
    
    <div class="form-group es-materials-filter col-sm-6">
      <label>上传时间：</label>
      <input class="form-control form-control-input-sm mrm" type="text" id="startDate" name="startDate" value="" placeholder="{{ 'form.placeholder.start_date'|trans }}">
      -
      <input class="form-control form-control-input-sm mlm" type="text" id="endDate" name="endDate" value="" placeholder="{{ 'form.placeholder.end_date'|trans }}">
    </div>
  </div>
  <div class="form-inline row">
    <div class="form-group col-sm-5">
    <label>转码状态：</label>
      <select class="form-control js-process-status-select form-control-input-md" name="audioConvertStatus">
        <option value="">{{ 'admin.cloud_file.select_placeholeder'|trans }}</option>
        <option value="waiting">{{ '等待转码'|trans }}</option>
        <option value="doing">{{ 'cloud_file.process_status.doing'|trans }}</option>
        <option value="success">{{ 'cloud_file.process_status.ok'|trans }}</option>
        <option value="error">{{ 'cloud_file.process_status.error'|trans }}</option>
        <option value="">{{ '文件不支持'|trans }}</option>
        <option value="">{{ '无需转码'|trans }}</option>
      </select>
    </div>
    {% if pageType == 'file' %}
      <div class="form-group col-sm-6">
        <label>使用情况：</label>
        <select class="form-control js-use-status-select form-control-input-md" name="useStatus">
          <option value="">{{ 'admin.cloud_file.select_placeholeder'|trans }}</option>
          <option value="unused">{{ 'cloud_file.use_status.unused'|trans }}</option>
          <option value="used">{{ 'cloud_file.use_status.used'|trans }}</option>
        </select>
        <button class="form-space btn btn-primary cloud-search-btn">{{ 'form.btn.search'|trans }}</button>
      </div>
    {% endif %}
  </div>
</div>
