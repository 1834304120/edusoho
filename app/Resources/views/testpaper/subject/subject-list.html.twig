<div class="subject-list subject-rect js-subject-list cd-mt16">
  <div class="subject-rect__title">题目列表</div>
  <div class="subject-list__tip">第<span>2、7</span>题有违规</div>

{% set data = [
  {
    "name": '单选题',
    "type": 'single_choice',
    "flag": 1,
  },
  {
    "name": '单选题',
    "type": 'single_choice',
    "flag": 0,
  },
  {
    "name": '单选题',
    "type": 'single_choice',
    "flag": 1,
  },
  {
    "name": '单选题',
    "type": 'single_choice',
    "flag": 0,
  },
  {
    "name": '单选题',
    "type": 'single_choice',
    "flag": 1,
  },
  {
    "name": '多选题',
    "type": 'choice',
    "flag": 0,
  },
  {
    "name": '多选题',
    "type": 'choice',
    "flag": 1,
  },
  {
    "name": '多选题',
    "type": 'choice',
    "flag": 0,
  },
  {
    "name": '不定项',
    "type": 'uncertain_choice',
    "flag": 1,
  },
  {
    "name": '不定项',
    "type": 'uncertain_choice',
    "flag": 0,
  },
  {
    "name": '不定项',
    "type": 'uncertain_choice',
    "flag": 1,
  },
  {
    "name": '问答题',
    "type": 'eassy',
    "flag": 0,
  },
  {
    "name": '问答题',
    "type": 'eassy',
    "flag": 1,
  },
  {
    "name": '判断题',
    "type": 'determine',
    "flag": 0,
  },
  {
    "name": '判断题',
    "type": 'determine',
    "flag": 1,
  },
  {
    "name": '填空题',
    "type": 'fill',
    "flag": 0,
  },
  {
    "name": '材料题',
    "type": 'material',
    "flag": 0,
  },
  {
    "name": '材料题',
    "type": 'material',
    "flag": 1,
  }
] %}
  <div class="subject-list__body row">
    {% for item in data %}
      <div class="col-sm-3 subject-list-item">
        <div class="subject-list-item__num {% if item.flag %}subject-list-item__num--error{% endif %} js-subject-anchor" data-anchor="{{'#' ~ loop.index }}">
          {{ loop.index }}
          {% if item.type != 'material' %}
            <label class="sb-checkbox cd-checkbox js-show-checkbox hidden" data-type="{{ item.type }}" data-name="{{ item.name }}"><input type="checkbox" data-toggle="cd-checkbox"></label>
          {% endif %}
        </div>
        {{ item.name }}
      </div>
    {% endfor %}
  </div>
  <button class="cd-btn cd-btn-primary btn-block js-batch-btn" type="button">批量操作</button>
  <div class="subject-batch js-subject-wrap hidden">
    <label class="cd-checkbox subject-batch-checkbox js-batch-select"><input type="checkbox" data-toggle="cd-checkbox"> 全选</label>
    <div class="row">
      <div class="col-sm-6"><a href="javascript:;" class="js-score-setting">批量设置分数</a></div>
      <div class="col-sm-6 text-right"><a href="javascript:;" class="js-difficult-setting">批量设置难度</a></div>
    </div>
    <button class="cd-btn cd-btn-primary btn-block cd-mt8 js-finish-btn" type="button">完成</button>
  </div>
</div>