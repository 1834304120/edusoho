{% extends 'old-bootstrap-modal-layout.html.twig' %}
{% set modal_class = 'modal-lg' %}
{% block title %}{{'admin.course_manage.chooser.title'|trans}}{% endblock %}
{% block body %}

<form id="message-search-form" class="form-inline well well-sm" action="{{ path('admin_course_chooser_ajax', {'withPlan': withCoursePlan }) }}" method="post" novalidate>
	<div class="form-group">
	  <select class="form-control" name="categoryId">
	    {{ select_options(category_choices('course'), app.request.query.get('categoryId'), 'admin.course_manage.chooser.course_category'|trans) }}
	  </select>
	</div>
  {% if not withCoursePlan %}
    <div class="form-group">
      <select class="form-control" name="status">
        {{ select_options(dict('courseStatus'), app.request.query.get('status'), 'admin.course_manage.chooser.course_status'|trans) }}
      </select>
    </div>
  {% endif %}
	<div class="form-group">
	  <input class="form-control" type="text" placeholder="{{'admin.course_manage.title_placeholder'|trans}}" name="title" value="{{ app.request.get('title') }}">
	</div>
	<div class="form-group">
	  <input class="form-control" type="text" placeholder="{{'admin.course_manage.creator_placeholer'|trans}}" name="creatorName" value="{{ app.request.get('creatorName') }}">
	</div>
	<a class="btn btn-primary" id="search">{{'form.btn.search'|trans}}</a>
</form>
  <div>
    <label class="">
      {{'coupon.resource.selected'|trans}}<i id="selected-count" style="color: green">0</i>
    </label>
    <input id="courseSets" type="hidden" value="">
    <a id="clear-cookie" href="javascript:;">{{'coupon.resource.clear'|trans}}</a>
  </div>
  <div class="courses-list">
    {% include 'admin/course/course-set-chooser-tr.html.twig' %}
  </div>
{% endblock %}
{% block footer %}
  <button id="chooser-items" data-url="{{ path('admin_coupon_course_selected') }}" data-submiting-text="{{ 'form.btn.submit.submiting'|trans }}" type="submit" class="btn btn-primary pull-right">{{ 'form.btn.confirm'|trans }}
  </button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{ 'form.btn.cancel'|trans }}</button>
  <script>app.load('course/chooser');</script>
{% endblock %}