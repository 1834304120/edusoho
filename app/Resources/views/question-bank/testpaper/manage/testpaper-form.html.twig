{% extends 'my/my-teaching.html.twig' %}

{% block title %}
  {% if testpaper is defined %}
    {{ 'my.teaching.question_bank.testpaper.edit'|trans }} - {{ parent() }}
  {% else %}
    {{ 'my.teaching.question_bank.testpaper.manual_create'|trans }} - {{ parent() }}
  {% endif %}
{% endblock %}
{% set side_nav = 'my-question-bank' %}

{% do script(['libs/jquery-validation.js','libs/es-ckeditor/ckeditor.js','app/js/question-bank/testpaper/create/index.js'])  %}

{% block main %}
  <div class="panel panel-default panel-col">
    <div class="panel-heading">{{ questionBank.name }}</div>
  </div>

  <div>
    <div class="courseset-header-section">
      <ul class="nav nav-tabs nav-header-section clearfix">
        <li class="nav-header-section__item cd-ml32"><a href="{{ path('question_bank_manage_question_list', {id: questionBank.id }) }}">{{ 'my.teaching.question_bank.question.manage'|trans }}</a></li>
        <li class="nav-header-section__item cd-ml32 active"><a href="{{ path('question_bank_manage_testpaper_list', {id: questionBank.id }) }}">{{ 'my.teaching.question_bank.testpaper.manage'|trans }}</a></li>
        <li class="nav-header-section__item cd-ml32"><a href="{{ path('question_bank_manage_question_category', {id: questionBank.id }) }}">{{ 'my.teaching.question_bank.question_category.manage'|trans }}</a></li>
      </ul>
    </div>
    <div class="panel panel-default panel-col">
      {% block panel_body %}
        <div class="panel-body question-list-container js-testpaper-container">
          <div class="mtl">
            <form id="testpaper-form" class="form-horizontal" method="post" data-url="
              {% if testpaper is defined %}
                {{ path('question_bank_manage_testpaper_edit', {id: questionBank.id, testpaperId: testpaper.id}) }}
              {% else %}
                {{ path('question_bank_manage_testpaper_create', {id: questionBank.id}) }}
              {% endif %}
            ">
              {% if showBaseInfo == '1' %}
                {% include 'question-bank/testpaper/manage/base-info.html.twig' %}
              {% endif %}
              {% include 'question-bank/testpaper/manage/questions-info.html.twig' %}
            </form>
            {% include 'question-bank/testpaper/manage/set-score-modal.html.twig' %}
          </div>
        </div>
      {% endblock %}
    </div>
  </div>
{% endblock %}