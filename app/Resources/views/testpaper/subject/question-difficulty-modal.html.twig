            <input type="radio" data-toggle="cd-radio" name="difficultyRadios" value="difficulty" checked=""><span>困难</span>
          </label>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="cd-btn cd-btn-link-default" data-dismiss="modal">{{ 'form.btn.cancel'|trans }}</a>
