<div id="category-set-modal" class="modal cd-modal in js-category-modal" aria-hidden="true">
  <div class="modal-dialog cd-modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <i class="cd-icon cd-icon-close"></i>
        </button>
        <h4 class="modal-title">{{'设置分类'|trans}}</h4>
      </div>
      <div class="modal-body">
        <div class="subject-state-content clearfix cd-mb24">
          <span>{{'course.testpaper_manage.import.re_edit.selected'|trans}}</span>
          <div class="subject-state-content__text js-select"></div>
        </div>
        <div class="subject-state-form">
          <div class="form-group cd-mb24">
            <div class="col-md-3 control-label subject-state-form__label">
              <label class="control-label-required" for="score">{{ 'course.testpaper_manage.question.score'|trans }}</label>
            </div>
            <div class="col-md-9 controls pl0">
              <input id="score" type="text" class="form-control" name="score" required="required">
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="cd-btn cd-btn-link-default" data-dismiss="modal">{{ 'form.btn.cancel'|trans }}</button>
        <button type="button" class="cd-btn cd-btn-primary js-category-btn" data-loading-text="{{'form.btn.hand_in.submiting'|trans}}..">{{'form.btn.confirm'|trans}}</button>
      </div>
    </div>
  </div>
</div>