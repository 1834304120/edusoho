{% extends 'bootstrap-modal-layout.html.twig' %}
{% set modal_class = 'cd-modal-dialog function-modal-dialog' %}
{% block title %}{{ 'admin_v2.quick_entrance_setting'|trans }}{% endblock %}
{% do script(['app/js/admin-v2/default/quick-entrance/index.js']) %}

{% block body %}
  {% for itemData in entranceData %}
<form id="quick-entrance-form" method="post" action="{{ path('admin_v2_quick_entrance') }}">
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  <div class="entrance-section">
    <div class="entrance-section__title">{{ itemData.title }}</div>
    <div class="{{ 'entrance-section__body js-entrance-list cd-pt16 row ' ~ itemData.class }}">
      {% for entry in itemData.data %}
        <div class="col-md-3">
          <div class="text-center admin-function  js-function-choose {% if entry.checked|default(false) %}active{% endif %}" data-code="{{ entry.code }}">
            <div class="admin-function__tag"></div>
            <div class="admin-function__icon"><i class="{{ 'es-icon es-icon-entry-' ~ entry.icon }}"></i></div>
            <div class="admin-function__name">{{ entry.text }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  {% endfor %}
{% endblock %}

  {% block footer %}
  <div class="function-modal-tip">{{ 'admin_v2.quick_entrance_setting.tips'|trans }}</div>
  <a class="function-modal__link" data-dismiss="modal" href="javascript:;">{{ 'form.btn.cancel'|trans }}</a>
  <button type="button" class="btn function-modal__btn js-save-btn" data-loading-text="{{'form.btn.save.submiting'|trans}}" >{{ 'form.btn.save'|trans }}</button>
</form>
{% endblock %}