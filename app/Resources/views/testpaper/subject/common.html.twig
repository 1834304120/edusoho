<div class="subject-item__operation {% if type == 'subMaterial' %}cd-ml32{% endif %}" data-url="{{ path('subject_edit_template', {type: type}) }}">
  <span class="js-item-edit"><i class="es-icon es-icon-exam"></i>编辑</span>
  <span class="js-item-delete"><i class="es-icon es-icon-shanchu"></i>删除</span>
  {% if type == 'material' %}
    <span class="js-item-add-sub"><i class="es-icon es-icon-tianjia"></i>添加子问题</span>
  {% endif %}
  <span class="js-item-add"><i class="es-icon es-icon-tianjia"></i>在此题后添加新题</span>
</div>
<div class="subject-item__footer">
  <span>难度：</span><span class="cd-mr24 color-success js-difficulty">{{ difficulty }}</span>
  <span>分数：</span><span class="color-success js-score">{{ score }}分</span>
</div>