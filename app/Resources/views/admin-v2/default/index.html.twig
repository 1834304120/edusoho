{% extends 'admin-v2/layout.html.twig' %}
{% block title %}{{ 'admin.hompage.html_head_title'|trans }}{% endblock %}
{% set panel = 'dashboard' %}
{% set adminV2Homepage = 1 %}
{% do script(['app/js/admin-v2/default/index.js']) %}

{% set bodyClass = "admin-v2-page" %}

{% block container %}
  <div class="container admin-v2-container">
    {# 域名检查提示#}
    <div class="alert-list">
      {{ render(controller('AppBundle:AdminV2/Default:validateDomain')) }}
      {% if not (setting('copyright.thirdCopyright')|default(0) == 1) and is_trial() %}
        {{ render(controller('AppBundle:AdminV2/Default:getCloudNotices')) }}
      {% endif %}
    </div>

    <div class="row cd-mt24">
      <div class="col-md-9">

        {# 任务助手 #}
        <div class="admin-v2-section admin-v2-section--step">
          <div class="admin-v2-section__header">任务助手<span class="admin-v2-section__tip">六步完成网校基础建设</span><span class="admin-v2-section__more js-show-toggle"><span class="js-toggle-text">收起</span><i class="es-icon es-icon-keyboardarrowup"></i></span></div>
          <div class="admin-v2-section__body js-steps ">
            <div class="row">
              <div class="col-md-2 pr0">
                <div class="task-step task-step--done">
                  <span class="task-step__tag"></span>
                  <div class="task-step__title">接入教育云</div>
                  <div class="task-step__tip">直播、点播等多种能力，低成本、并发高</div>
                  <a class="task-step__btn" href="#">已完成</a>
                  <a class="task-step__link" href="#" target="_blank">查看指南</a>
                </div>
              </div>
              <div class="col-md-2 pr0">
                <div class="task-step">
                  <div class="task-step__title">申请支付</div>
                  <div class="task-step__tip">开通微信、支付宝等支付，轻松在线收款</div>
                  <a class="task-step__btn" href="#">前去完成</a>
                  <a class="task-step__link" href="#" target="_blank">查看指南</a>
                </div>
              </div>
              <div class="col-md-2 pr0">
                <div class="task-step">
                  <div class="task-step__title">设置注册</div>
                  <div class="task-step__tip">开启注册，建立网校专属用户流量池</div>
                  <a class="task-step__btn" href="#">前去完成</a>
                  <a class="task-step__link" href="#" target="_blank">查看指南</a>
                </div>
              </div>
              <div class="col-md-2 pr0">
                <div class="task-step">
                  <div class="task-step__title">安装常见插件</div>
                  <div class="task-step__tip">为您推荐前10家优秀网校常用的插件</div>
                  <a class="task-step__btn" href="#">前去完成</a>
                  <a class="task-step__link" href="#" target="_blank">查看指南</a>
                </div>
              </div>
              <div class="col-md-2 pr0">
                <div class="task-step">
                  <div class="task-step__title">创建课程</div>
                  <div class="task-step__tip">快速创建课程商品，获取网校收益</div>
                  <a class="task-step__btn" href="#">前去完成</a>
                  <a class="task-step__link" href="#" target="_blank">查看指南</a>
                </div>
              </div>
              <div class="col-md-2">
                <div class="task-step">
                  <div class="task-step__title">装修网校</div>
                  <div class="task-step__tip">装修网校首页，获得更多用户好感</div>
                  <a class="task-step__btn" href="#">前去完成</a>
                  <a class="task-step__link" href="#" target="_blank">查看指南</a>
                </div>
              </div>

            </div>
          </div>
        </div>

        {# 数据概览 #}
        <div class="admin-v2-section cd-pb24">
          <div class="admin-v2-section__header cd-mb16">{{ 'admin_v2.homepage.data_overview'|trans }}<a class="admin-v2-section__more" href="{{ path('admin_v2_data_statistics_overview') }}">{{ 'admin_v2.homepage.more_btn'|trans }}<i class="es-icon es-icon-chevronright"></i></a></div>
          <div class="admin-v2-section__body admin-data" data-url="{{ path('admin_v2_homepage_daily_statistics') }}">
            <div class="row text-center" style="line-height: 56px;">
              {{ 'admin_v2.homepage.loading_data_tips'|trans }}
            </div>
          </div>
        </div>

        {# 常用入口 #}
        <div class="admin-v2-section cd-pb16">
          <div class="admin-v2-section__header cd-mb16">{{ 'admin_v2.homepage.quick_entrance'|trans }}</div>
          <div class="admin-v2-section__body">
            <div class="row quick-entrance">
              {{ render(controller('AppBundle:AdminV2/Default:quickEntrance')) }}
            </div>
          </div>
        </div>

        {# 应用简介 #}
        <div class="admin-v2-section cd-pb24 application-intro"
             {% if not is_without_network() %}data-url="{{ path('admin_v2_homepage_application_intro') }}" {% endif %}>
          <div class="admin-v2-section__header cd-mb16">{{ 'admin_v2.homepage.application_intro'|trans }}
            <a class="admin-v2-section__more js-no-network"
               href="javascript:;">{{ 'admin_v2.homepage.application_intro.more_btn'|trans }}</a></div>
          <div class="admin-v2-section__body">
            <div class="row">
              {% for i in 0..3 %}
                <div class="col-md-3">
                  <div class="text-center admin-application">
                    <i class="es-icon es-icon-entry-application"></i>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>

        {# 经营建议 #}
        {{ render(controller('AppBundle:AdminV2/Default:businessAdvice')) }}

      </div>
      <div class="col-md-3">
        <div class="admin-info-section">
          <div class="admin-website">
            {% if setting('site.logo') %}
              <a class="admin-website__logo" href="#">
                <img src="{{ asset(setting('site.logo')) }}">
              </a>
            {% endif %}
            <div class="admin-website__name"><a class="admin-website__text text-overflow" href="#">哎呀音乐哎呀音世哎呀音乐是哎呀音乐哎呀音世哎呀音乐是</a></div>
              {# 三种颜色的客户等级 #}
            <div class="">
              <div class="rank-tag rank-tag--yellow rank-tag--green"><span class="rank-tag__icon"><i class="cd-icon cd-icon-star"></i></span>
                <div class="rank-tag__text">商业授权</div>
              </div>
              <div class="theme-tag">雅致简洁主题</div>
            </div>

          </div>
          <div class="admin-update clearfix">
            <div class="admin-update__cell clearfix"><div class="admin-update__label pull-left">云服务：</div><div class="admin-update__link pull-right"><div class="admin-update__number">3个</div><a href="#">未开启</a></div></div>
            {# 已开启和已更新的例子 #}
            <div class="admin-update__cell clearfix"><div class="admin-update__label pull-left">应用中心：</div><div class="cdv2-light-minor pull-right"><div class="admin-update__number">3个</div>已更新</div></div>
            <div class="admin-update__cell clearfix"><div class="admin-update__label pull-left">系统更新：</div><div class="pull-left cdv2-light-minor">8.3.36</div><div class="admin-update__link pull-right"><a href="#">未更新</a></div></div>
          </div>
          <div class="admin-link">
            <a class="admin-link__btn" href="#" target="_blank"><i class="es-icon es-icon-website"></i>访问Web</a>
            <a class="admin-link__btn admin-link__btn--disabled" href="javascript:;" target="_blank"><span class="closed-tag"></span><i class="es-icon es-icon-app"></i>访问App</a>
            <a class="admin-link__btn js-mini-program mb0" href="javascript:;"><i class="es-icon es-icon-miniprogram"></i>访问小程序</a>
          </div>
        </div>

        {% set test = {
          'src': 'http://open.edusoho.com/files/product/SubSchool/iconed1fed70.jpg',
          'text': '北京用户大会于上扣扣的看风使舵开始发送到了解详情点击进入坎坎坷坷第三方发倒是是啦啦>>'
        } %}

        <div class="admin-sidebar-section cd-pb16">
          <div class="admin-sidebar-section__header">站长公告</div>
          <a class="admin-sidebar-section__body admin-notice" href="#" target="_blank">
            <img src="http://try6.edusoho.cn/files/course/2019/11-04/165421d7fbdf066767.png">
            <div class="admin-notice__text">{{ test.text }}</div>
          </a>
        </div>

        {{ render(controller('AppBundle:AdminV2/Default:changelog')) }}

        {# 公众号 #}
        {{ render(controller('AppBundle:AdminV2/Default:qrCode')) }}

      </div>
    </div>

    <div  id="cloud-ad" class="admin-cloud-ad modal fade text-center" aria-hidden="true" data-backdrop="static"  tabindex="-1" role="dialog" data-url ="{{ path('admin_v2_cloud_ad') }}">
      <div class="modal-dialog">
          <a href="" target="_blank">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
          </a>
      </div>
    </div>
  </div>
{% endblock %}
