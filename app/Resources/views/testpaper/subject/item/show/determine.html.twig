{% set answer = item.answer %}
{% set errors = item.errors|default([]) %}
<div class="subject-item {% if position|default(null)  ==  'sub' %}subject-sub-item{% endif %}" id="{% if token|default(null) %}{{token}}{% else %}{{ key }}{% endif %}">
  <div class="subject-item__title">
    <span class="subject-item__number {% if errors is not empty %}subject-item__number--danger{% endif %}">
    {% if seq|default(null) %}
      {{ seq }}
    {% else %}
      {{ key }}
    {% endif %}
    </span>
    {% if errors.stem is not defined %}
      <span>{{ item.stem|raw }}</span>
    {% elseif errors.stem.code == 100001 %}
      <span class="single-item__text--danger">缺少题干，请点击"编辑"进行设置。</span>
    {% endif %}
  </div>
  <div class="subject-item__body">
      <label class="cd-radio single-item subject-forbid {% if answer %}checked{% endif %}">
        <input type="radio" data-toggle="cd-radio" name="right" value="true"><span class="single-item__text">{{ '正确' }}</span>
      </label>
      <label class="cd-radio single-item subject-forbid {% if not answer %}checked{% endif %}">
        <input type="radio" data-toggle="cd-radio" name="wrong" value="true"><span class="single-item__text">{{ '错误' }}</span>
      </label>
  </div>
  {% include 'testpaper/subject/common.html.twig' with { type: item.type, difficulty: item.difficulty, score: item.score } %}
</div>