<div class="modal in js-score-modal" aria-hidden="true">
  <div class="modal-dialog" data-clear="{{ closeClear|default(0) }}">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <i class="cd-icon cd-icon-close"></i>
        </button>
        <h4 class="modal-title">批量设置分数</h4>
      </div>

      <div class="modal-body task-state-modal">
        <div class="content text-left ph20">
          <span class="text-14">
            {{'已选：'|trans}}
          </span>
          <span class="text-14 js-select">
          </span>
        </div>
        <form class="form-horizontal mt20" id="batch-set-score-form">
          <div class="row form-group">
            <div class="col-md-2 control-label">
              <label for="score">分值</label>
            </div>
            <div class="col-md-10 controls">
              <input id="score" type="text" class="form-control" name="score" required="required" placeholder="请输入小于1000的正整数">
            </div>
          </div>
          <div class="row form-group hidden miss-score-field">
            <div class="col-md-2 control-label">
              <label for="missScore">漏选分值</label>
            </div>
            <div class="col-md-10 controls">
              <input id="missScore" type="text" class="form-control" name="missScore" placeholder="请输入小于1000的正整数">
            </div>
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn cd-btn cd-btn-primary pull-right js-batch-score-confirm">{{ 'form.btn.confirm'|trans }}</button>
        <a href="javascript:;" class="btn btn-link pull-right" data-dismiss="modal">{{ 'form.btn.cancel'|trans }}</a>
      </div>
    </div>
  </div>
</div>