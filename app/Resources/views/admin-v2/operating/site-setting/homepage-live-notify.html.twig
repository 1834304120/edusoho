{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_homepage_live_notify' %}
{% do script(['libs/jquery-validation.js','app/js/admin-v2/operating/site/live-notify/index.js']) %}

{% block main %}

  {{ web_macro.flash_messages() }}

  <form class="form-horizontal" method="post" id="live-notify-setting-form" novalidate>
    <div class="row form-group">
      <div class="col-md-3 control-label">
        <label for="enabled">{{'首页直播提醒'|trans}}</label>
      </div>
      <div class="controls col-md-8 radios">
        {{ radios('enabled', {1:'开启'|trans, 0:'关闭'|trans}, liveNotifySetting.enabled) }}
        <p class="help-block">{{'开启后，当有即将开始的直播时，对于已购买直播的学员，进入首页时会弹出浮动提示框，提示学员进入直播教室。'|trans}}</p>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-3 control-label">
        <label for="preTime">{{ '提前提醒时间'|trans }}</label>
      </div>
      <div class="controls col-md-8">
        <input class="form-control width-input" required id="preTime" type="text" name="preTime" value="{{ liveNotifySetting.preTime }}">{{ '分钟'|trans }}
        <p class="help-block">{{'设置在直播开课前第几分钟，弹出提醒。'|trans}}</p>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-3 control-label">
        <label for="enabled">{{'提醒显示位置'|trans}}</label>
      </div>
      <div class="controls col-md-8 radios">
        {{ radios('position', {'leftBottom' :'页面左下角'|trans, 'rightBottom' :'页面右下角'|trans, 'rightTop' :'页面右上角'|trans}, liveNotifySetting.position) }}
        <p class="help-block">{{'设置直播提醒的浮层显示位置，需避免跟已有的浮层重叠。'|trans}}</p>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-3 control-label"></div>
      <div class="controls col-md-8">
        <button type="submit" class="btn btn-primary">{{'form.btn.submit'|trans}}</button>
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
{% endblock %}